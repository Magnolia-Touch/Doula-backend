doctype html
html
  head
    meta(charset="UTF-8")
    title New Enquiry Notification
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        color: #333;
        padding: 20px;
      }
      .container {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #eee;
      }
      h2 {
        color: #007BFF;
      }
      .field {
        margin-bottom: 10px;
      }
      .label {
        font-weight: bold;
      }
  body
    .container
      h2 New Enquiry Notification

      .field
        .label Name:
        span #{name}

      .field
        .label Phone Number:
        span #{phone_number}

      .field
        .label Email:
        span #{email}

      .field
        .label Details:
        p #{message}
